<?xml version="1.0" encoding="UTF-8"?>

<module active="1" name="location" path="/modules/location" controller="LocationController">
	<options>
		<group name="navigation" display="Locaciones" order="3" group="administration">
		</group>
		
		<option name="access_level" value="administrator" />
	</options>
	
	<rewrite debug="0">
		<backend>
			<rule match="^\/{$adminPath}\/location\/delete\/([0-9]+)$"
				 apply="BackRemove"
				 args="id=$1"
			/> 

			
		</backend>
		<frontend>
			<rule match="^\/([a-z]+)\/get_location_json\/([0-9]+)$" apply="FrontDisplayJSON" args="parent=$2" />
		</frontend>
	</rewrite>
</module>