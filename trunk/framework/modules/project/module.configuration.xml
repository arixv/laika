<?xml version="1.0" encoding="UTF-8" ?>

<module active="1" type_id="10" name="project" title="Proyectos" parent_name="projects" path="/modules/project" model="ProjectModel" controller="ProjectController">

	<options>

		<group name="navigation" display="Proyectos" order="2" group="content"  >
<!-- 			<option name="item" display="Listar" url="" />
			<option name="item" display="Nuevo" url="add" access_level="administrator" /> -->
		</group>

		<group name="settings">
			<option name="access_level" value="administrator" />
			<option name="url_prefix" value="project" />
			<option name="pager" value="50" />
			<option name="repository"  value="xml/project" />
		</group>

		<group name="categories" >
			<option type="parent" value="2" display="CategorÃ­as" />
			<!-- <option type="parent" value="3" display="Fotos" /> -->
		</group>

		<group name="images">
			<option type="resize" width="650" height="100" suffix="_10" quality="95"/>
			<option type="crop" width="610" height="390" suffix="_n" quality="90" />
			<option type="crop" width="360" height="230" suffix="_l" quality="90" />
		</group>

	

	</options>

	
	<rewrite debug="0">
		<backend>
			<rule
				 match="\/{$adminPath}\/project\/add\/?$"
				 apply="BackDisplayAdd"
				 args=""
				 access_level="administrator"
				 redirect="/list/"
			/>
			<rule match="\/{$adminPath}\/project\/add_sub_rubro\/([0-9]+)\/rubro\/([0-9]+)\/?$" apply="BackDisplayAddSubRubro" args="project_id=$1&amp;rubro_id=$2" access_level="administrator" />
			<rule match="\/{$adminPath}\/project\/add_rubro\/([0-9]+)\/?$" apply="BackDisplayAddRubro" args="project_id=$1" access_level="administrator" />
			<rule match="\/{$adminPath}\/project\/add_factura\/([0-9]+)\/?$" apply="BackDisplayAddFactura" args="project_id=$1" access_level="administrator" />
			<rule match="\/{$adminPath}\/project\/subrubros_json\/([0-9]+)\/?$" apply="BackDisplayRubrosJson" args="parent=$1" access_level="administrator" />

		</backend>

	</rewrite>
	
</module>